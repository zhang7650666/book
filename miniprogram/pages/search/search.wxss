/* miniprogram/pages/search/search.wxss */ 
 /* 搜索样式 */
 .search-page{
   position:relative;
 }
.search-wrap{
  position:fixed;
  top:0rpx;
  width:100%;
  padding:20rpx 0rpx;
  display:flex;
  border-bottom:1rpx solid #f2f2f2;
  align-items: center;
  background:#fff;
}
.search-main{
  flex: 0 0 600rpx;
  width:600rpx;
  background:#efeff4;
  border-radius:12rpx;
  position:relative;
  margin-left:20rpx;
 
}
.search-main .icon-search{
  position: absolute;
  top:23rpx;
  left:20rpx;
}

.ipt-search{
  display:block;
  width:546rpx;
  height:70rpx;
  background:#efeff4;
  border-radius:12rpx;
  font-size:28rpx;
  color:#999;
  line-height:70rpx;
  padding-left:54rpx;
}  
.search{
  flex:1;
  text-align: center;
}
.search text{
  color:#EA5149;
  font-size:32rpx;
  font-weight:bold;
}
/* 搜索列表 */
.search-list{
  border-bottom:1rpx solid #f7f7f7;
  display:flex;
  align-items: center;
  margin-top:112rpx;
}
.search-list .icon-search{
  flex:0 0 40rpx;
  padding-left:40rpx;
}
.search-list text{
  font-size:32rpx;
  color:#666666;
  line-height:80rpx;
}
.search-show{
  margin-top:112rpx;
  padding-bottom:100rpx;
}
/* 没有搜索到内容 */
.no-search{
  margin-top:112rpx;
  padding-bottom:100rpx;
}
.no-search .no-content{
  width:100%;
  text-align:center;
  padding:82rpx 0rpx;
}
.no-search .no-content image{
  width:230rpx;
  height:169rpx;
}
.no-search .no-content text{
  font-size:24rpx;
  color:#999999;
}
