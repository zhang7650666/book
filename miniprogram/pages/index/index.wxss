/* 搜索样式 */
.search-wrap{
  position:relative;
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
}
.hide-con{
  text-align:center;
  display:block;
  width:710rpx;
  height:56rpx;
  background:#efeff4;
  border-radius:12rpx;
}
.icon-search{
  position: relative;
  top:2rpx;
}
.insert{
  display:inlie-block;
  height:56rpx;
  border-radius:12rpx;
  font-size:28rpx;
  color:#bababa;
  line-height:56rpx;
  margin-left:12rpx;
}
.ipt-search{
  display:block;
  width:680rpx;
  height:56rpx;
  background:#efeff4;
  margin-left:20rpx;
  border-radius:12rpx;
  font-size:28rpx;
  color:#999;
  line-height:56rpx;
  padding-left:30rpx;
}
/* 图书*/

.hot-con .more{
  flex:0 0 60rpx;
  font-size:30rpx;
  color:#999999;
}
.img-more{
  flex:0 0 40rpx;
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
