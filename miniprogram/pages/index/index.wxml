<!--index.wxml-->
<view class="container">
  <!-- 搜素 -->
  <view class="search-wrap">
    <view class="hide-con" bindtap='handleShow'>
       <icon class="icon-search" type="search" size="12"></icon>
       <text class="insert">搜索书名或作者</text>
    </view>
  </view>
  <!-- 轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
    <block wx:for="{{imgUrls}}" wx:key="item">
      <swiper-item>
        <image src="{{item.banner_img}}" class="slide-image" style='width:100%; overflow:show;' mode="widthFix"/>
      </swiper-item>
    </block>
  </swiper>
  <!-- 热门推荐 -->
  <view class="home-main-book">
      <view class="main-title">
        <text class="red"></text>
        <text class="title-text">热门推荐</text>
        <text class="book-more" data-title="1" bindtap="handleMore">更多</text>
      </view>
      <view class="books-wrap">
        <view class="books-main" wx:for="{{hotBooks}}}" wx:key="item.fiction_id" wx:if="{{index < 6}}">
          <home-book books="{{item}}"></home-book>
        </view>
      </view>
  </view>
  <!-- 男生最爱 -->
  <view class="home-main-book">
      <view class="main-title">
        <text class="red"></text>
        <text class="title-text">男生最爱</text>
        <text class="book-more" data-title="2" bindtap="handleMore">更多</text>
      </view>
      <view class="books-wrap">
        <view class="books-main" wx:for="{{boyBooks}}}" wx:key="item.fiction_id" wx:if="{{index < 6}}">
          <home-book books="{{item}}"></home-book>
        </view>
      </view>
  </view>
  <!-- 女生最爱 -->
  <view class="home-main-book">
      <view class="main-title">
        <text class="red"></text>
        <text class="title-text">女生最爱</text>
        <text class="book-more" data-title="3" bindtap="handleMore">更多</text>
      </view>
      <view class="books-wrap">
        <view class="books-main" wx:for="{{girlsBooks}}}" wx:key="item.fiction_id" wx:if="{{index < 6}}">
          <home-book books="{{item}}"></home-book>
        </view>
      </view>
  </view>
  <!--大家都在看-->
  <view class="main-title">
      <text class="red"></text>
      <text class="title-text">大家都在看</text>
    </view>
    <view  wx:for="{{indexLooks}}" wx:key="item.fiction_id" wx:if="{{index <30}}">
      <search-book books="{{item}}"></search-book>
    </view>
</view>
