/* miniprogram/pages/reading/reading.wxss */
page {
  height: 100%;
}
.read-page{
  position:relative;
  height:100%;
  min-height: 100%;
  max-height:100%;
  display: flex;
  flex-direction: column;
}
.novel-wrap{
  padding: 24rpx;
  padding-bottom: 160rpx;
  flex: 1 0 auto;
  text-align: justify;
}
.novel-title{
    color:inherit;
    font-size:44rpx;
    line-height:156rpx;
}
.novel-article{
  text-indent: 2em;
  color:inherit;
  line-height: 1.5;
  padding-bottom: 30rpx;
}
.wxParse-p{
    text-indent: 2em;
    color:#222;
    line-height: inherit;
    padding-bottom: 30rpx;
}
/* 按钮组 */
.btn-group{
    display:flex;  
    padding:0rpx 40rpx;
    margin-top:-120rpx;
    flex: 0 0 120rpx;
    height:120rpx;
}
.btn-group .prev,.btn-group .next,.btn-group .directory{
    flex:1;
    height:120rpx;
}
.btn-group .prev text,.btn-group .next text {
   display:inline-block;
   width:236rpx;
   height:76rpx;
   border:2rpx solid #cccccc;
   border-radius:10rpx;
   text-align:center;
   line-height:76rpx;
   color:#666666;
   font-size:28rpx;
}
.btn-group .next{
  text-align:right;
}
.btn-group .directory{
  flex:0 0 152rpx;
  height:76rpx;
  border:2rpx solid #cccccc;
  border-radius:10rpx;
  text-align:center;
  line-height:76rpx;
  color:#666666;
  font-size:28rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.btn-group .directory image{
  display:inline-block;
  width:40rpx;
  height:40rpx;
} 
/* maks */
.mask-wrap{
  position:fixed;
  left:0rpx;
  right:0rpx;
  bottom:0rpx;
}
.mask-wrap .btn-group{
  margin-top:0rpx;
}
.arrow-pub{
  position:fixed;
  right:0rpx;
  width:200rpx;
  height:60rpx;
  background:rgba(25,22,16,0.69);
  text-align:center;
  background: linear-gradient(130deg, transparent 30rpx,rgba(25,22,16,0.69) 0) top left, 
			linear-gradient(-135deg, transparent 0px,rgba(25,22,16,0.69) 0) top right, 
			linear-gradient(-45deg, transparent 0px, rgba(25,22,16,0.69) 0) bottom right, 
			linear-gradient(50deg, transparent 30rpx, rgba(25,22,16,0.69) 0) bottom left; 	
  background-size: 50% 50%; 
  background-repeat: no-repeat;
}
.arrow-pub text{
  font-size:24rpx;
  color:#ffffff;
  line-height:60rpx;
}
.mask-main{
  border:2rpx solid #908775;
  background:rgba(25,22,16,0.69);
  padding-top:40rpx;
}
.go-book-store{
 bottom:380rpx;
}
.add-book-store{
 bottom:300rpx;
}

