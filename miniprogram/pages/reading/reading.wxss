/*checkbox 整体大小  */
checkbox {
  width: 40rpx;
  height: 28rpx;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 25rpx;
  height: 25rpx;
  top:-2rpx;
}
/*checkbox选中后样式  
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FF525C;
