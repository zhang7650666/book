/**app.wxss**/
@import "/wxParse/wxParse.wxss";
page{
  font-size:24rpx;
}
.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  box-sizing: border-box;
  background:#fff;
} 
/* 热门公用样式 */
.main-title{
  display:flex;
  padding:36rpx 0rpx;
  justify-content: center;
}
.main-title .red{
  flex:0 0 8rpx;
  width:8rpx;
  height:30rpx;
  background:#EA5149;
  margin-top:6rpx;
}
.main-title .title-text{
  flex:1;
  padding-left:40rpx;
  font-size:32rpx;
  color:#333;
  font-weight:500;
}
/* bar公用样式 */
 .bar{
   background:#f2f2f2;
   height:12rpx;
 }
 /* 去除padding */
 .no-padding{
  padding:0rpx;
}
/* 禁止点击样式 */
.disabled{
  background:#ccc;
}

/*图书列表*/
.books-wrap{
  display:flex;
  flex-wrap:wrap;
  padding:0 24rpx;
}
.books-main{
  flex:1;
  width:33.33333%;
  min-width:33.3333%;
  max-width:33.3333%;
  display:flex;
  justify-content: center;
}