/* components/top-up/topUp.wxss */
.top-up-page{
  position: relative;
  width:220rpx;
  align-items: center;
  border:2rpx solid #ff3333;
  margin-top:54rpx;
  height:100rpx;
  padding:40rpx;
  color:#999999;
}

.top-up-page .money{
  line-height:50rpx;
  font-size:36rpx;
  font-weight:bold;
}

.color-red {
  color:#ff3333;
}
.top-up-page .discount .proportion,
.top-up-page .discount .giving,
.top-up-page .discount .integral{
  height:50rpx;
  line-height:50rpx;
  color: inherit;
  font-size:30rpx;
}
.top-up-page .add{
  position:absolute;
  right:0rpx;
  top:0rpx;
  width:120rpx;
  height:40rpx;
  background:#ff3333;
  color:#fff;
  text-align:center;
  font-size:26rpx;
}
.active{
  background:#ff3333;
  color: #fff;
}
.active .money{
  color:#fff;
}
.active .discount .proportion,.active .discount .giving,.active .discount .integral{
  color:inherit;
}
.active .add{
  position:absolute; 
  background:#fff;
  color: #ff3333;
  right:-5rpx;
  top:-2rpx;
  z-index:99 !important;
}
